    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rlMainOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="layout/item_blog_0"                           
        tools:ignore="MissingPrefix"  xmlns:app="http://schemas.android.com/apk/res-auto">

      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/spacing_standard_new"
          android:layout_marginEnd="@dimen/spacing_standard_new"
          android:layout_marginBottom="@dimen/spacing_standard_new"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="@dimen/_14sdp">
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="@dimen/_14sdp"
                  app:cardElevation="0dp">
                  <ImageView
                      android:id="@+id/ivProduct"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_170sdp"
                      android:src="@drawable/ic_product2"
                      android:scaleType="centerCrop"/>
              </com.google.android.material.card.MaterialCardView>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/textColorPrimary"
                   android:textSize="@dimen/font_size_normal"
                   android:textAppearance="@style/FontSemiBold"
                   android:layout_marginTop="@dimen/spacing_middle"
                   android:layout_marginStart="@dimen/spacing_standard_new"
                   android:tag="binding_1"      />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/textColorSecondary"
                  android:textSize="@dimen/font_size_small"
                  android:textAppearance="@style/FontMedium"
                  android:layout_marginStart="@dimen/spacing_standard_new"
                  android:layout_marginBottom="@dimen/spacing_middle"
                  android:tag="binding_2"             />

          </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

         